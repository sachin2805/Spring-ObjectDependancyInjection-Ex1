<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean class="com.bean.Date" id="d1">
		<property name="dd" value="28"></property>
		<property name="mm" value="05"></property>
		<property name="yy" value="2021"></property>
	</bean>

	<bean class="com.bean.Employee" id="e1">
		<property name="name" value="Sachin"></property>
		<property name="designation" value="Devloper"></property>
		<property name="salary" value="70000"></property>
		<property name="joiningDate" ref="d1"></property>

	</bean>



</beans>